<!-- BEGIN CONTENT -->
<div class="page-content-wrapper">
  <div class="page-content">
    <!-- BEGIN PAGE HEADER-->
    <div class="row">
      <div class="col-md-12">
        <!-- BEGIN PAGE TITLE & BREADCRUMB-->
        <h3 class="page-title">
          Evercam Vendors & Models
        </h3>
        <ul class="page-breadcrumb breadcrumb">
          <li>
            <i class="fa fa-home"></i>
            <a href="/admin">Home</a>
            <i class="fa fa-angle-right"></i>
          </li>
          <li>
            <a href="#">Vendors & Models</a>
          </li>
        </ul>
        <!-- END PAGE TITLE & BREADCRUMB-->
      </div>
    </div>
    <!-- END PAGE HEADER-->

    <!-- BEGIN PAGE SUMMARY -->
    <div class="row">
      <div class="col-md-9"></div>
      <div class="col-md-3">
        <div class="portlet sale-summary">
          <div class="portlet-title">
            <div class="caption">
              Summary
            </div>
            <div class="tools">
              <a class="reload" href="javascript:;">
              </a>
            </div>
          </div>
          <div class="portlet-body">
            <ul class="list-unstyled">
              <li>
                <span class="sale-info">
                  Total Vendors
                  <i class="fa fa-img-up"></i>
                </span>
                <span class="sale-num">
                  <%= @total_vendors %>
                </span>
              </li>
              <li>
                <span class="sale-info">
                  Total Cameras
                  <i class="fa fa-img-down"></i>
                </span>
                <span class="sale-num">
                  <%= @total_cameras %>
                </span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <!-- END PAGE SUMMARY -->
    <!-- BEGIN PAGE CONTENT-->
    <div id="vendor-model-list-row" class="row hide1">
      <div class="col-md-12 table-container">
        <table class="table table-striped table-bordered table-hover" id="datatable_vendor_models">
          <thead>
          <tr role="row" class="heading">
            <th width="15%" name="order_vendor" class="sorting">Vendor</th>
            <th width="15%" name="order_model" class="sorting">Model</th>
            <th width="20%" name="order_snapshot_url" class="sorting">Snapshot</th>
            <th width="20%" name="order_h264_url" class="sorting">H264</th>
            <th width="20%" name="order_mjpg_url" class="sorting">MJPG</th>
            <th width="10%" name="order_thumbnail" class="sorting">Actions</th>
          </tr>
          <tr role="row" class="filter">
            <td>
              <input type="text" class="form-control form-filter input-sm" name="vendor">
            </td>
            <td>
              <input type="text" class="form-control form-filter input-sm" name="vendor_model">
            </td>
            <td>
              <input type="text" class="form-control form-filter input-sm" name="snapshot_url">
            </td>
            <td>
              <input type="text" class="form-control form-filter input-sm" name="h264_url"/>
            </td>
            <td>
              <input type="text" class="form-control form-filter input-sm" name="mjpg_url"/>
            </td>
            <td>
              <div class="margin-bottom-5">
                <button class="btn btn-sm yellow filter-submit margin-bottom"><i class="fa fa-search"></i> Search</button>
              </div>
              <button class="btn btn-sm red filter-cancel"><i class="fa fa-times"></i> Reset</button>
            </td>
          </tr>
          </thead>
          <tbody>

          </tbody>
        </table>
      </div>
    </div>
    <!-- END PAGE CONTENT-->
  </div>
</div>
<!-- END CONTENT -->

<script>
  var vendor_models_table = new Datatable();

  var headers, token;

  token = $('meta[name="csrf-token"]');

  if (token.size() > 0) {
    headers = {
      "X-CSRF-Token": token.attr("content")
    };
  }
  vendor_models_table.init({
    src: $("#datatable_vendor_models"),
    onSuccess: function (grid) {
      // execute some code after table records loaded
    },
    onError: function (grid) {
      // execute some code on network or other general error
    },
    onDataLoad: function(grid) {
      // execute some code on ajax data load
    },
    loadingMessage: 'Loading...',
    dataTable: { //http://datatables.net/usage/options
      "bStateSave": true, // save datatable state(pagination, sort, etc) in cookie.
      "lengthMenu": [
        [25, 50, 100, 200, -1],
        [25, 50, 100, 200, "All"]
      ],
      "pageLength": 50,
      "ajax": {
        "method": "GET",
        "headers": headers,
        "url": "models/load.vendor.model"
      },
      "order": [
        [0, "asc"]
      ],
      initComplete: function(){
        $("#vendor-model-list-row").removeClass('hide');
      }
    }
  });

