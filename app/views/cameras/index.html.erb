<div class="bb-alert alert alert-info" style="display:none;">
  <span></span>
</div>
<div class="page-container" id="camera-index">
  <div class="page-sidebar-wrapper">
    <!-- sidebar menu start-->
    <div class="page-sidebar navbar-collapse collapse">

      <ul id="nav-accordion" class="page-sidebar-menu" data-auto-scroll="true" data-slide-speed="200">
        <!--<li class="sidebar-toggler-wrapper">
           BEGIN SIDEBAR TOGGLER BUTTON -->
        <!--<div class="sidebar-toggler">
        </div>-->
        <!-- END SIDEBAR TOGGLER BUTTON
      </li>-->
        <li>
          <a href="/dev">
            <span class="title">Developer</span>
          </a>

        </li>

        <li>
          <a class="active" href="javascript:;">
            <span class="title open">Camera Dashboard</span>
            <span class="caret"></span>
          </a>
          <ul class="sub-menu">
            <% @cameras.each do |camera| %>
            <li class="sub-menu-item">
              <a href="/cameras/<%= camera['id'] %>?share=false">
                <div id="offline-menu"> <% if camera['is_online'] %>
                  <% else %>
                    <span class="red-dot"><small>off</small></span>
                  <% end %>
                </div>
                <%= camera['name'] %>
              </a>
            </li>
            <% end %>
            <% @shares.each do |camera| %>
              <li class="sub-menu-item">
                <span class="share-icon"></span>
                <a href="/cameras/<%= camera['id'] %>?share=true">
                  <div id="offline-menu">
                    <% if camera['is_online'] %>
                    <% else %>
                      <span class="red-dot"><small>off</small></span>
                    <% end %>
                  </div>
                  <%= camera['name'] %>
                </a>
              </li>
            <% end %>
          </ul>
        </li>

        <li>
          <a class="public-cam" href="/publiccam">Public Cameras</a>
        </li>

        <li>
          <a href="/cameras/new">Add Camera</a>
        </li>
      </ul>
    </div>
    <!-- sidebar menu end-->
  </div>
<div class="page-content-wrapper">
  <div class="page-content">

      <!--main content start-->
            <% @cameras.each do |camera| %>
              <a href="/cameras/<%= camera['id'] %>?share=false">
                <div class="col-md-4 col-sm-6 col-xs-12 cam-box">
                  <div id="cam-name"><h5><%= camera['name'] %></h5></div>
                  <%= preview(camera) %>
                  <div id="offline"> <% if camera['is_online'] %>
                      <span class="green">Online</span>
                    <% else %>
                      <span class="red">Offline</span>
                    <% end %>
                    <a href="#" id="cam-refresh" class="refresh"><span class="glyphicon glyphicon-refresh"></span></a>
                  </div>
                </div>
              </a>
            <% end %>

            <% @shares.each do |camera| %>
              <div class="col-md-4 col-sm-6 col-xs-12 cam-box">
                <a href="/cameras/<%= camera['id'] %>?share=true">
                  <div id="cam-name"><h5><%= camera['name'] %></h5></div>
                  <%= preview(camera) %>
                  <div id="offline"> <% if camera['is_online'] %>
                      <span class="green">Online</span>
                    <% else %>
                      <span class="red">Offline</span>
                    <% end %>
                    <a href="#" id="cam-refresh" class="refresh"><span class="glyphicon glyphicon-refresh"></span></a>
                  </div>
                </a>
              </div>
            <% end %>

            <div class="col-md-4 col-sm-6 col-xs-12 add-cam-box">
              <a href="/cameras/new">
                <p><span class="glyphicon glyphicon-plus"></span>Add an IP Camera</p>
              </a>
            </div>
      <!--main content end-->

  </div>
</div>
</div>
<%= javascript_include_tag "cameras" %>
<script type="text/javascript">

  Notification.init(".bb-alert");
  <% if flash[:message] %>
  Notification.show('<%= flash[:message] %>');
  <% end %>

</script>