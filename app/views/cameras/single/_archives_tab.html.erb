<div class="row">
  <div class="col-md-12">
    <table id="archives-table" class="table table-striped table-bordered">
      <thead>
      <th class="col-md-4">Title</th>
      <th class="col-md-4">Status</th>
      <th class="col-md-4">Created</th>
      <th class="col-md-4"></th>
      </thead>
      <tbody></tbody>
    </table>
  </div>
</div>

<div class="row form-vertical margin-top-10">
  <div class="col-md-12">
    <div class="form-title">
      <span class="bold">Create a new Clip:</span>
    </div>
    <div class="add-clip">
      <table class="table table-borderless">
        <tr>
          <td class="form-label-td col-md-2">
            <label class="control-label">Clip Name:</label>
          </td>
          <td colspan="4">
            <div class="input-group">
              <input type="text" placeholder="Clip Name" class="form-control clip-text-box" id="clip-name" name="clip-name">
            </div>
          </td>
        </tr>

        <tr>
          <td class="form-label-td">
            <label class="control-label">From:</label>
          </td>
          <td class="col-md-3">
            <div class="input-group">
              <input id="from-date" class="datetimepicker clip-text-box clip-datepicker" type="text" value="<%= (Time.now - 2).strftime('%d/%m/%Y') %>">
            </div>
          </td>
          <td>
            <div class="col-md-4 dropdown-label">Hour:</div>
            <div class="col-md-8 dropdown-padding-left">
              <select id="from-hour" name="from-hour" class="time-dropdown form-control is-required"></select>
            </div>
          </td>
          <td>
            <div class="col-md-4 dropdown-label">Minutes:</div>
            <div class="col-md-8 dropdown-padding-left">
              <select id="from-minutes" name="from-hour" class="time-dropdown form-control is-required"></select>
            </div>
          </td>
          <td>
            <div class="col-md-4 dropdown-label">Minutes:</div>
            <div class="col-md-8 dropdown-padding-left">
              <select id="from-seconds" name="from-hour" class="time-dropdown form-control is-required"></select>
            </div>
          </td>
        </tr>
        <tr>
          <td class="form-label-td">
            <label class="control-label">To:</label>
          </td>
          <td class="col-md-3">
            <div class="input-group">
              <input id="to-date" class="datetimepicker clip-text-box clip-datepicker" type="text" value="<%= Time.now.strftime('%d/%m/%Y') %>">
            </div>
          </td>
          <td>
            <div class="col-md-4 dropdown-label">Hour:</div>
            <div class="col-md-8 dropdown-padding-left">
              <select id="to-hour" name="to-hour" class="time-dropdown form-control is-required"></select>
            </div>
          </td>
          <td>
            <div class="col-md-4 dropdown-label">Minutes:</div>
            <div class="col-md-8 dropdown-padding-left">
              <select id="to-minutes" name="to-hour" class="time-dropdown form-control is-required"></select>
            </div>
          </td>
          <td>
            <div class="col-md-4 dropdown-label">Minutes:</div>
            <div class="col-md-8 dropdown-padding-left">
              <select id="to-seconds" name="to-hour" class="time-dropdown form-control is-required"></select>
            </div>
          </td>
        </tr>
        <tr>
          <td colspan="5">
            <div class="input-group">
              <button type="submit" class="btn btn-primary" id="create_clip_button">Create Clip</button>
            </div>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>