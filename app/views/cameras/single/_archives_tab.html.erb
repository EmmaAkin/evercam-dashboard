<div class="row">
  <div class="col-md-12 table-responsive">
    <table id="archives-table" class="table table-striped table-bordered ">
      <thead>
      <th class="col-md-1">Title</th>
      <th class="col-md-2">From</th>
      <th class="col-md-2">To</th>
      <th class="col-md-1">Frames</th>
      <th class="col-md-1">Status</th>
      <th class="col-md-2">Created</th>
      <th class="col-md-1">Options</th>
      </thead>
      <tbody>

      </tbody>
    </table>
  </div>
</div>
<input id="archive-api-url" type="hidden" value="<%= "#{EVERCAM_API}cameras/#{params[:id]}/archives?api_id=#{current_user.api_id}&api_key=#{current_user.api_key}" %>">

<div class="row form-vertical margin-top-10">
  <div class="col-md-12">
    <div href="#" class="btn btn-primary" data-toggle="modal" data-target="#archive-modal">
      Create a new Clip
    </div>
  </div>
</div>

<div id="archive-modal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div id="form-create-clip" class="modal-body">
        <div class="row">
          <div class='col-lg-12 col-md-12 col-sm-12'>
            <div class='portlet'>
              <div class="portlet-title">
                <div class="caption"> Create a new Clip</div>
              </div>
              <div class="portlet-body">
                <div class="add-clip">
                  <table class="table table-fixed table-borderless">
                    <tr>
                      <td style="width: 100px;"><label class="control-label camera-name" for="camera-name">Clip Name:</label></td>
                      <td>
                        <input type="text" required placeholder="Clip Name" class="form-control clip-text-box" id="clip-name" name="clip-name">
                      </td>
                    </tr>
                    <tr>
                      <td class="col-md-4"><label class="control-label" for="camera-vendor">From:</label></td>
                      <td>
                        <input id="from-date" name="from-date" class="datetimepicker clip-text-box clip-datepicker" type="text" value="<%= (@user_time - (2*60*60)).strftime('%d/%m/%Y %H:%M:%S') %>">
                      </td>
                    </tr>
                    <tr>
                      <td class="model-td"><label class="control-label">To:</label></td>
                      <td>
                        <input id="to-date" name="to-date" class="datetimepicker clip-text-box clip-datepicker" type="text" value="<%= @user_time.strftime('%d/%m/%Y %H:%M:%S') %>">
                      </td>
                    </tr>
                    <tr>
                      <td><label class="control-label" for="camera-username"></label></td>
                      <td>
                        <div class="input-group checkbox">
                          <input id="embed-datetime" name="embed-datetime" class="" type="checkbox" > <label id="lbl-embed-datetime" for="embed-datetime" class="camera-row-label">Overlay recording time along bottom of clip</label>
                        </div>
                        <div class="input-group checkbox">
                          <input id="is-public" name="is-public" class="" type="checkbox" > <label id="lbl-is-public" for="is-public" class="camera-row-label">Public on the web</label>
                        </div>
                      </td>
                    </tr>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
        <fieldset>
          <div class="save-settings">
            <div class='pull-left form-group'><label class="control-label" for="add-button"></label>
              <input type="submit" class="alert push btn btn-primary margin-right-10" id="create_clip_button" value="Create Clip"/>
              <input type="hidden" id="archive-url" value="<%= request_clip_path(params[:id]) %>">
              <input type="hidden" id="archive-delete-url" value="<%= delete_clip_path %>">
            </div>
            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
          </div>
        </fieldset>
      </div>
    </div>
  </div>
</div>