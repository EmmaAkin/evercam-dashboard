<div class="portlet solid" id="camera-md-emails-panel">
  <div class="portlet-title">
    <div class="caption">Email Alert Settings</div>
    <div id="alert-toggle">
      <label class="label toggle">
        <input id="enable-email" type="checkbox" class="toggle_input"/>
        <div class="toggle-control"></div>
      </label>
      </td>
    </div>
  </div>
  <div id="emailsettings" class="portlet-body col-md-12">
    <table class="table table-fixed table-borderless">
      <tr>
        <td class="col-md-3">Emails:</td>
        <td>
          <div id="div-alert-emails" class="col-md-9"></div>
        </td>
      </tr>
      <tr id="email">
        <td>Add Emails:</td>
        <td>
          <input id="md-alert-email" class="form-control" type="text" name="md-alert-email" required="required">
          <% if @has_edit_rights %>
          <button id="save-email" name="save-email" class="alert push btn btn-primary margin-right-10">Add</button>
          <%end%>
        </td>
      </tr>
    </table>
  </div>
</div>