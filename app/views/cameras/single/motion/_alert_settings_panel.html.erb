<div class="portlet solid" id="camera-details-panel">
  <div class="portlet-title">
    <div class="caption">Motion Detection Settings</div>
    <% if @has_edit_rights %>
      <div href="#" class="btn btn-edit" data-toggle="modal" data-target="#motion-detection-settings-modal">
        edit
      </div>
    <% end %>
  </div>
  <div class="portlet-body col-md-12">
    <table class="table table-fixed table-borderless">
      <tr>
        <td class="col-md-3">Motion Detection:</td>
        <td class="col-md-9">
          <span id="ec_cam_id">
            On
          </span>
        </td>
      </tr>
      <tr>
        <td>Sensitivity:</td>
        <td>
          High
        </td>
      </tr>
      <tr>
        <td>Time:</td>
        <td>
          24 hours
        </td>
      </tr>
      <tr>
        <td>Reset Time:</td>
        <td>
          1 minute
        </td>
      </tr>
      <tr>
        <td>Alerts On:</td>
        <td>
          Mon, Tue, Wed, Fri
        </td>
      </tr>

    </table>
  </div>
</div>