<div id="email-alert-settings-modal" class="modal fade">
  <div class="modal-dialog" style="width:400px;">
    <div class="modal-content">
      <div class="modal-body">
        <div class="row">
          <div class='col-lg-12 col-md-12 col-sm-12'>
            <div class='portlet'>
              <div class="portlet-title">
                <div class="caption"> Add Email</div>
              </div>
              <div class="portlet-body">
                <div class="">
                  <table class="table table-fixed table-borderless">
                    <tr>
                      <td class="col-md-2"><label class="control-label">Email:</label></td>
                      <td>
                        <input id="md-alert-email" class="form-control" type="text" name="md-alert-email" required="required" data-validation="email">
                      </td>
                    </tr>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
        <fieldset>
          <div class="save-email-settings">
            <div class='pull-left form-group'><label class="control-label" for="add-button"></label>
              <button id="save-email" name="save-email" class="alert push btn btn-primary margin-right-10">Save</button>
            </div>
            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
          </div>
        </fieldset>
      </div>
    </div>
  </div>
</div>