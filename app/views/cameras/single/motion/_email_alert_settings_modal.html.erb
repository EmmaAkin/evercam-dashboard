<div id="email-alert-settings-modal" class="modal fade">
  <div class="modal-dialog" style="width:400px;">
    <div class="modal-content">
      <div class="modal-body">
        <div class="row">
          <div class='col-lg-12 col-md-12 col-sm-12'>
            <div class='portlet'>
              <div class="portlet-title">
                <div class="caption"> Email Alert Settings</div>
              </div>
              <div class="portlet-body">
                <div class="">
                  <table class="table table-fixed table-borderless">
                    <tr>
                      <td>
                        <div class="input-group checkbox">
                          <input id="enable-email" name="enable-email" class="" type="checkbox"> <label class="type-label" for="enable-email">Enable email alerts</label>
                        </div>
                      </td>
                    </tr>
                    <tr>
                      <td id="row-email-box">

                      </td>
                    </tr>
                    <tr>
                      <td>
                        <div class="col-lg-10 padding-left-0">
                          <input id="email" class="form-control" type="text" name="email" required="required" data-validation="email">
                        </div>
                        <div class="col-lg-2 padding-left-0">
                          <input type="button" class="btn btn-default" value="Add" id="add-md-email">
                        </div>
                      </td>
                    </tr>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
        <fieldset>
          <div class="row save-email-settings">
            <div class='pull-left form-group'><label class="control-label" for="add-button"></label>
              <button id="save-email-settings" name="save-email-settings" class="alert push btn btn-primary margin-right-10">Save</button>
            </div>
            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
          </div>
        </fieldset>
      </div>
    </div>
  </div>
</div>