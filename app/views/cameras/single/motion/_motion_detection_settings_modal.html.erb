<div id="motion-detection-settings-modal" class="modal fade">
  <div class="modal-dialog" style="width:450px;">
    <div class="modal-content">
      <div class="modal-body">
        <div class="row">
          <div class='col-lg-12 col-md-12 col-sm-12'>
            <div class='portlet'>
              <div class="portlet-title">
                <div class="caption"> Motion Detection Settings</div>
              </div>
              <div class="portlet-body">
                <div class="">
                  <table class="table table-fixed table-borderless">
                    <tr>
                      <td class="col-lg-4"></td>
                      <td class="col-lg-8"></td>
                    </tr>
                    <tr>
                      <td colspan="2">
                        <div class="input-group checkbox">
                          <input id="enable-md" name="enable-md" class="" type="checkbox"> <label id="enable-md-label" class="type-label" for="enable-md">Enable motion detection</label>
                        </div>
                      </td>
                    </tr>
                    <tr>
                      <td><label class="control-label">Sensitivity:</label></td>
                      <td>
                        <div id="divSensitivity"></div>
                      </td>
                    </tr>
                    <tr>
                      <td><label class="control-label">From Time:</label></td>
                      <td>
                        <select id="alert-from" name="alert-from" class="form-control"></select>
                      </td>
                    </tr>
                    <tr>
                      <td><label class="control-label">To Time:</label></td>
                      <td>
                        <select id="alert-to" name="alert-to" class="form-control"></select>
                      </td>
                    </tr>
                    <tr>
                      <td class="model-td"><label class="control-label">Reset Time:</label></td>
                      <td>
                        <select id="reset-time" name="reset-time" class="form-control">
                          <option value="30" selected="selected">30 seconds</option>
                          <option value="1">1 minute</option>
                          <option value="5">5 minutes</option>
                        </select>
                      </td>
                    </tr>
                    <tr>
                      <td><label class="control-label" for="snapshot">Alerts On:</label></td>
                      <td>
                        <div class="checkbox-list">
                          <div class="input-group checkbox col-md-3">
                            <input id="chkAll" name="alldays" class="" type="checkbox" value="all"> <label id="lbl" class="day-label-all" for="chkAll">All</label>
                          </div>
                          <div class="input-group checkbox col-md-3">
                            <input id="chkMon" name="days" class="" type="checkbox" value="Mon"> <label id="lblMon" class="day-label" for="chkMon">Mon</label>
                          </div>
                          <div class="input-group checkbox col-md-3">
                            <input id="chkTue" name="days" class="" type="checkbox" value="Tue"> <label id="lblTue" class="day-label" for="chkTue">Tue</label>
                          </div>
                          <div class="input-group checkbox col-md-3">
                            <input id="chkWed" name="days" class="" type="checkbox" value="Wed"> <label id="lblWed" class="day-label" for="chkWed">Wed</label>
                          </div>
                          <div class="input-group checkbox col-md-3">
                            <input id="chkThu" name="days" class="" type="checkbox" value="Thu"> <label id="lblThu" class="day-label" for="chkThu">Thu</label>
                          </div>
                          <div class="input-group checkbox col-md-3">
                            <input id="chkFri" name="days" class="" type="checkbox" value="Fri"> <label id="lblFri" class="day-label" for="chkFri">Fri</label>
                          </div>
                          <div class="input-group checkbox col-md-3">
                            <input id="chkSat" name="days" class="" type="checkbox" value="Sat"> <label id="lblSat" class="day-label" for="chkSat">Sat</label>
                          </div>
                          <div class="input-group checkbox col-md-3">
                            <input id="chkSun" name="days" class="" type="checkbox" value="Sun"> <label id="lblSun" class="day-label" for="chkSun">Sun</label>
                          </div>
                        </div>
                      </td>
                    </tr>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
        <fieldset>
          <div class="row save-md-settings">
            <div class="col-md-2">
              <button id="save-md-settings" name="save-md-settings" class="alert push btn btn-primary margin-right-10">Save</button>
            </div>
            <div class="col-md-6"><button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button></div>
          </div>
        </fieldset>
      </div>
    </div>
  </div>
</div>
