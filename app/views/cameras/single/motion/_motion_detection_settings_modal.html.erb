<div id="motion-detection-settings-modal" class="modal fade">
  <div class="modal-dialog" style="width:450px;">
    <div class="modal-content">
      <div class="modal-body">
        <div class="row">
          <div class='col-lg-12 col-md-12 col-sm-12'>
            <div class='portlet'>
              <div class="portlet-title">
                <div class="caption"> Motion Detection Settings</div>
              </div>
              <div class="portlet-body">
                <div class="">
                  <table class="table table-fixed table-borderless">
                    <tr>
                      <td class="col-lg-4"></td>
                      <td class="col-lg-8"></td>
                    </tr>
                    <tr>
                      <td colspan="2">
                        <div class="input-group checkbox">
                          <input id="enable-md" name="enable-md" class="" type="checkbox"> <label id="enable-md-label" class="type-label" for="enable-md">Enable motion detection</label>
                        </div>
                      </td>
                    </tr>
                    <tr>
                      <td><label class="control-label">Sensitivity:</label></td>
                      <td>
                        <div id="divSensitivity"></div>
                      </td>
                    </tr>
                    <tr>
                      <td class="model-td"><label class="control-label">Reset Time:</label></td>
                      <td>
                        <select id="reset-time" name="reset-time" class="form-control">
                          <option value="30" selected="selected">30 seconds</option>
                          <option value="1">1 minute</option>
                          <option value="5">5 minutes</option>
                        </select>
                      </td>
                    </tr>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
        <fieldset>
          <div class="row save-md-settings">
            <div class="col-md-2">
              <button id="save-md-settings" name="save-md-settings" class="alert push btn btn-primary margin-right-10">Save</button>
            </div>
            <div class="col-md-6"><button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button></div>
          </div>
        </fieldset>
      </div>
    </div>
  </div>
</div>
