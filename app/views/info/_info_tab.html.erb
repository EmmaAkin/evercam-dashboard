        <td><%= link_to_unless(@camera.fetch('extra_urls', {})['short_jpg_url'].nil?, @camera.fetch('extra_urls', {})['short_jpg_url']) %></td>
      </tr>
    </table>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <div class="col-lg-9">
      <table class='table borderless'>
        <thead>
        <tr><h4>Stream</h4></tr>
        </thead>
        <tr>
          <td>HTTP Snapshot Image</td>
          <td><%= link_to_unless(@camera.fetch('extra_urls', {})['external_jpg_url'].nil?, @camera.fetch('extra_urls', {})['external_jpg_url']) %></a></td>
        </tr>
        <tr>
          <td >HTTP MPEG4 Stream</td>
          <td></td>
        </tr>
        <tr>
