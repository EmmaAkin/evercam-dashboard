<div class="row">
  <div class="col-lg-12 info-panel">
    <div class="col-lg-4">
      <table class='table borderless'>
        <thead>
        <tr><h4>Info</h4></tr>
        </thead>
        <tr>
          <td>Camera ID</td>
          <td><%= @camera['id'] %></td>
        </tr>
        <tr>
          <td>Camera Owner</td>
          <td><%= @camera['owner'] %></td>
        </tr>
        <tr>
          <td>Local IP</td>
          <td><%= @camera['internal_host'] %></td>
        </tr>
      </table>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-12 info-panel">
    <div class="col-lg-9">
    <table class='table borderless'>
      <thead>
      <tr><h4>Assets</h4></tr>
      </thead>
      <tr>
        <td>JPEG URL</td>
        <td>
          <% if @camera['is_public'] %>
            <%= link_to "http://evr.cm/#{@camera['id']}.jpg", "http://evr.cm/#{@camera['id']}.jpg", :only_path => false %>
          <% else %>
            <% url = @camera.fetch('extra_urls', {})['short_jpg_url'] %>
            <%= link_to_unless(url.nil?, url, url, :only_path => false) %>
          <% end %>
        </td>
      </tr>
    </table>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <div class="col-lg-9">
      <table class='table borderless'>
        <thead>
          <tr><h4>Stream</h4></tr>
        </thead>
        <tr>
          <td>RTSP Stream</td>
          <% url = @camera.fetch('extra_urls', {})['external_rtsp_url'] %>
          <td><%= link_to_unless(url.nil?, url, url, :only_path => false) %></td>
        </tr>
        <tr>
          <td>HTTP Snapshot Image</td>
          <% url = @camera.fetch('extra_urls', {})['external_jpg_url'] %>
          <td><%= link_to_unless(url.nil?, url, url, :only_path => false) %></td>
        </tr>
      </table>
   </div>
  </div>
</div>
  
  

<script type="text/javascript">
  $(window.Evercam.Info.initializeTab);
</script>