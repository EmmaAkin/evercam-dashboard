<div class="row">
  <div class="col-lg-12 info-panel">
    <div class="col-lg-4">
      <table class='table borderless'>
        <thead>
        <tr><h4>Info</h4></tr>
        </thead>
        <tr>
          <td>Camera ID</td>
          <td><%= @camera['id'] %></td>
        </tr>
        <tr>
