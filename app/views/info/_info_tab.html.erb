<div class="row">
  <div class="col-lg-12 info-panel">
    <div class="col-lg-4">
      <table class='table borderless'>
        <thead>
        <tr><h4>Info</h4></tr>
        </thead>
        <tr>
          <td>Camera ID</td>
          <td><%= @camera['id'] %></td>
        </tr>
        <tr>
          <td>Camera Owner</td>
          <td><%= @camera['owner'] %></td>
        </tr>
        <tr>
          <td>Local IP</td>
          <td><%= @camera['internal_host'] %></td>
        </tr>
      </table>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-12 info-panel">
    <div class="col-md-12">
      <h4>Short URLs</h4>
    </div>
    <div class="col-md-1">
      <strong>JPEG</strong>
    </div>
    <div class="col-md-11">
      <% if @camera['is_public'] %>
        <%= link_to "http://evr.cm/#{@camera['id']}.jpg", "http://evr.cm/#{@camera['id']}.jpg", :only_path => false %>
      <% else %>
        <%= "http://evr.cm/#{@camera['id']}.jpg" %> <small class="grey">          ...(Only available for public cameras)</small>
      <% end %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-12 info-panel">
    <div class="col-md-12">
      <h4>Dynamic DNS URLs</h4>
    </div>
    <div class="col-md-1">
      <strong>JPEG</strong>
    </div>
    <div class="col-md-11">
      <% url = @camera.fetch('extra_urls', {})['short_jpg_url'] %>
      <%= link_to_unless(url.nil?, url, url, :only_path => false) %>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <div class="col-md-12">
      <h4>Base URLs</h4>
    </div>
    <div class="col-md-1">
      <strong>RTSP</strong>
    </div>
    <div class="col-md-11">
      <% url = @camera.fetch('extra_urls', {})['external_rtsp_url'] %>
      <%= link_to_unless(url.nil?, url, url, :only_path => false) %>
    </div>
    <div class="col-md-1">
      <strong>JPEG</strong>
    </div>
    <div class="col-md-11">
      <% url = @camera.fetch('extra_urls', {})['external_jpg_url'] %>
      <%= link_to_unless(url.nil?, url, url, :only_path => false) %>
    </div>
   </div>
</div>

  
  

<script type="text/javascript">
  $(window.Evercam.Info.initializeTab);
</script>