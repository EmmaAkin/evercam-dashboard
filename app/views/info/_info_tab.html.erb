                            <% models(v.id).each_with_index  do |m, index| -%>
                              <% if index == 0 %>
                                <option value="<%= m.exid -%>" ><%= m.name -%></option>
                              <% else %>
                                <option value="<%= m.exid -%>" <% if m.name == @camera["model_name"] %>selected="selected"<% end %> ><%= m.name -%></option>
