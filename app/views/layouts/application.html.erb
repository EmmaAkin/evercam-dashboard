    window.intercomSettings = {
        app_id: "f9c1fd60de50d31bcbc3f4d8d74c9c6dbc40e95a",
        name: "<%= current_user.firstname %>",// Full name
        email: "<%= current_user.email %>"  // Email address
    };
</script>
