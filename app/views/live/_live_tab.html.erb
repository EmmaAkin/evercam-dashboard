<div class="col-lg-12">

    <% if @camera['is_online'] %>
    <div class="col-lg-12">
      <h5 class="green pull-right">Online</h5>
      <%= preview(@camera, true) %>
    <% else %>
    <div class="col-lg-12 offline-overlay">
      <div class="red">Offline</div>
      <%= preview(@camera, true) %>
    <% end %>
    <a href="#" id="live-refresh" class="refresh"><span class="glyphicon glyphicon-refresh">  </span>  Refresh</a>

  </div>
</div>


<script type="text/javascript">
  $(window.Evercam.Live.initializeTab);
</script>