<div class="col-lg-12 info-panel">
  <h4>Logs</h4>
  <div class="row">
    <div class="col-md-12">
      <div class="bloc">
        <h4>Action</h4>
        <select id="types" multiple class="form-control">
          <!--<option class="log-option">View All</option>-->
          <% @types.each do |t| %>
          <option class="log-option" value="<%= t %>" <% if params[:types] and params[:types].include?(t) %> selected="selected"<% end %>><%= t.capitalize %></option>
          <% end %>
        </select>
      </div>
      <input id="current-page" type="hidden" value="<%= @page + 1 %>">
      <input id="exid" type="hidden" value="<%= @camera['id'] %>">
      <button id="apply-types" class="btn">Filter</button>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <table class="table table-hover">
        <thead>
          <th>Date</th>
          <th>Camera Action</th>
          <th>User/Client</th>
        </thead>
        <tbody>
          <% @logs.each do |l| %>
          <tr>
            <td>On <span class="bold"><%= Time.at(l['done_at']).to_datetime %></span></td>
            <td>Camera was <span class="bold"><%= l['action'] %></span></td>
            <td>by <span class="bold"><%= l['who'] %></span></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div><!-- row -->

</div><!-- info panel -->

<div class="col-md-12">
  <ul class="pagination">
    <% 1.upto(@pages + 1) do |i| %>
      <% if (@page + 1) == i %>
      <li class="active"><a href="/cameras/<%= @camera['id'] %>?page=<%= i %>&types=<%= params[:types] %>#logs"><%= i %><span class="sr-only">(current)</span></a></li>
      <% else %>
      <li><a href="/cameras/<%= @camera['id'] %>?page=<%= i %>&types=<%= params[:types] %>#logs"><%= i %></a></li>
      <% end %>
    <% end %>
  </ul>
</div>

<script type="text/javascript">
  $(window.Evercam.Logs.initializeTab);
</script>