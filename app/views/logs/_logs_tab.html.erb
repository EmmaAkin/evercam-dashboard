<div class="row">
  <div class="col-lg-12 info-panel">
    <h4>Logs</h4>
    <table>
      <thead>
        <th>Date</th>
        <th>Action</th>
        <th>User/Client</th>
      </thead>
      <tbody>
        <% @logs.each do |l| %>
        <tr>
          <td><%= Time.at(l['done_at']).to_datetime %></td>
          <td><%= l['action'] %></td>
          <td><%= l['who'] %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<ul class="pagination">
  <li <% if @page == 1 %>class="disabled"<% end %>><a href="#">&laquo;</a></li>
  <% 1.upto(@pages) do |i| %>
    <% if @page == i %>
    <li class="active"><a href="/cameras/<%= @camera['id'] %>?page=<%= i %>#logs"><%= i %><span class="sr-only">(current)</span></a></li>
    <% else %>
    <li><a href="/cameras/<%= @camera['id'] %>?page=<%= i %>#logs"><%= i %></a></li>
    <% end %>
  <% end %>
  <li <% if @page == @pages %>class="disabled"<% end %>><a href="#">&raquo;</a></li>
</ul>

