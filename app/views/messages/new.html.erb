<%= content_for(:title, "Evercam: Feedback") %>

<div class="page-content-wrapper" id="feedback">
  <div class="page-content">
    <div class="row">
      <div class="section-header">
        <div class="camera-title">
          Feedback
        </div>
      </div>
    </div>
    <div class="margin-top-20 row">
      <div class="col-sm-6 col-md-4 col-lg-4">
      <%= form_for @message, url: feedback_path do |message_form| %>
        <fieldset>
          <div class="form-group">
            <%= message_form.text_field :name, class: 'form-control', value: current_user.fullname, required: 'true' %>
            <label class="float-label">Your Name</label>
          </div>
          <div class="form-group">
            <%= message_form.email_field :email, class: 'form-control', value: current_user.email, required: 'true' %>
            <label class="float-label">Your Email</label>
          </div>
          <div class="form-group">
            <%= message_form.text_area :content, rows: '3', class: 'form-control', required: 'true' %>
            <label class="float-label" for="message-content">Your feedback</label>
          </div>
        </fieldset>
        <fieldset>
          <div class="form-group">
            <%= message_form.submit "Send", class: 'btn btn-primary' %>
          </div>
        </fieldset>
      <% end %>
      </div>
    </div>
  </div>
</div>

