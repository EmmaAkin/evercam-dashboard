<%= content_for(:title, "Evercam: Support") %>

<div class="page-content-wrapper">
  <div class="page-content" id="support">

    <div class="row">
      <div class="section-header">
        <div class="camera-title">
          <div class="col-xs-12 col-md-12">
            <div class="btn-group">
              <h3 class="page-title">Support</h3>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="row margin-top-20">
      <div class="col-md-6 col-lg-4 col-sm-8">
        <form id="support" role="form" method="post">
          <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
          <div class="form-group">
            <input data-validation="email" type="text" value="<%= current_user.email -%>" class="form-control" id="email" name="email" required>
            <span class="form-highlight"></span>
            <span class="form-bar"></span>
            <label class="float-label" for="email">From</label>
          </div>
          <div class="form-group">
            <textarea class="form-control" rows="3"></textarea>
            <label class="float-label" for="email">Message</label>
          </div>
          <div class="margin-top-40 row">
            <div class="col-md-12">
              <input type="submit" class="btn blue" value="Submit" name="Submit"/>
            </div>
          </div>
        </form>
      </div>
    </div>


  </div>
</div>