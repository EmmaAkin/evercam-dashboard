<div class="boxed-page">
  <div class="container clearfix">
    <section id="dev-dash">

      <!--sidebar start-->
      <div id="sidebar" class="col-md-2 col-xs-12">
        <ul class="sidebar-menu">
          <li class="menu-item">
            <a href="/" class="">
              <span>My Cameras</span>
            </a>
          </li>
          <li class="menu-item">
            <a href="/" class="">
              <span>Cameras Shared With Me</span>
            </a>
          </li>
          <li class="menu-item">
            <a href="/cameras/new"><span class="glyphicon glyphicon-plus"></span>Add IP Camera</a>
          </li>
          <li class="menu-item">
            <a href="/add-android"><span class="glyphicon glyphicon-plus"></span>Add Android Camera</a>
          </li>
          <li class="menu-item active">
            <a href="/publiccam"><span class="glyphicon glyphicon-plus"></span>Add Public Camera</a>
          </li>
        </ul>
      </div>
      <!--sidebar end-->
      <!--main content start-->
      <div class="col-md-10 col-xs-12 wrapper">
        <section id="main-content">
          <div class="row widget-header">
            <div class='col-md-12 widget-article-header'>
              <h3>Add a Public Camera</h3>
              <p>Repository of Public Cameras from around the world that you can add to your Camera Dashboard</p>

            </div>
            </div>
              <div id="publiccams">
                  <div class="row">
                    <div class="col-md-12">


                      <table class="table table-hover">
                        <thead>
                        <th class="col-md-3 public-table">Camera</th>
                        <th class="col-md-4 image-url">Image URL</th>
                        <th class="col-md-3"><span class="">Add</span></th>
                        <th class="col-md-2">Status</th>
                        <th class="col-md-2 text-right">Preview</th>
                        </thead>
                        <% @cameras.each do |c| %>
                          <tr>


                            <td><%= link_to(c.name, "publiccam/#{c.exid}") %></td>
                            <td>

                              <%= link_to(c.external_jpg_url, c.external_jpg_url, :only_path => false, target: '_blank') %></td>
                            <td class="">
                              <div class="add-hover">
                                <a href="#" class="create-share-button" camera_id="<%= c["id"] %>" email="<%= @user.email %>"><span class="glyphicon glyphicon-plus"></span>Add to My Cameras</a>
                              </div>
                            </td>
                            <td>
                              <% if c.is_online %>
                                <span class="green">Online</span>
                              <% else %>
                                <span class="red">Offline</span>
                              <% end %>
                            </td>
                            <td>
                              <div class="col-md-2 public-preview"><img class="pull-right" src="<%= c.external_jpg_url %>"></div>
                            </td>
                          </tr>
                        <% end %>
                      </table>
                    </div>
                  </div><!-- #row -->
              </div><!-- #PUBLICCAMS -->


        </section>
      </div>
      <!--main content end-->
    </section>
  </div>
</div> <!--boxed page end-->












<script>
$(window.Evercam.Publiccam.initialize);


</script>

