<div class="bb-alert alert alert-info" style="display:none;">
  <span></span>
</div>
<!-- sidebar menu start-->
<aside>
  <div id="sidebar" class="nav-collapse">
    <div class="leftside-navigation">
      <ul class="sidebar-menu" id="nav-accordion">
        <li>
          <a href="/cameras/new"><span class="glyphicon glyphicon-plus"></span>Add IP Camera</a>
        </li>
        <li>
          <a href="/add-android"><span class="glyphicon glyphicon-plus"></span>Add Android Camera</a>
        </li>
        <li>
          <a class="active" href="/publiccam">Public Cameras</a>
        </li>
        <li class="sub-menu">
          <a href="/">
            <span>My Cameras</span>
          </a>
        </li>
        <li class="sub-menu">
          <a href="/">
            <span>My Shared Cameras</span>
          </a>
        </li>
      </ul></div>
  </div>
</aside>
<!-- sidebar menu end-->

<section id="main-content">
  <section class="wrapper site-min-height">

          <div class="col-lg-6 list">
            <span class="glyphicon glyphicon-arrow-left"></span><%= link_to 'Back to Camera List', '/publiccam' %>
          </div>
          <div class="col-lg-6">
            <span class="pull-right">
            <a href="#" class="create-share-button btn evercam-btn" camera_id="<%= @camera["id"] %>" email="<%= @user.email %>"><span class="glyphicon glyphicon-plus"></span>Add to Cameras Shared With Me</a>
            </span>
          </div>
          <div class="col-lg-12">
            <h4><%= @camera['name'] %></h4>
          </div>
          <div class="col-lg-12">
            <div class="col-lg-6 camera-image">
              <img src="<%= @camera['jpg'] %>" width="100%">
            </div>
            <div class="col-lg-5 data">
              <h4>Data</h4>
              <table class="table">
                <tr>
                  <td>Vendor:</td>
                  <td><%= @camera["vendor_name"] %></td>
                </tr>
                <tr>
                  <td>Model:</td>
                  <td><%= @camera['model'] %></td>
                </tr>
                <tr>
                  <td>Status:</td>
                  <td>
                    <% if @camera['is_online'] %>
                    <span class="green">Online</span>
                    <% else %>
                    <span class="red">Offline</span>
                    <% end %>
                  </td>
                </tr>
                <tr>
                  <td>Added date:</td>
                  <td><%= Time.at(@camera['created_at']).to_formatted_s(:long_ordinal) %></td>
                </tr>
              </table>
            </div>
          </div>

    </section>
</section>


<%= javascript_include_tag "publiccam" %>
<script>
  $(window.Evercam.Publiccam.initialize);
</script>