<div class="container">

  <div class="col-lg-6 list">
    <span class="glyphicon glyphicon-arrow-left"></span><%= link_to 'Back to Camera List', '/publiccam' %>
  </div>
  <div class="col-lg-5">
    <span class="pull-right"><a href class="btn apps-btn">
      <span class="glyphicon glyphicon-plus"></span>Add to Cameras Shared With Me
      </a>
      </span>
  </div>

  <div class="col-lg-12">
    <h4><%= @camera['name'] %></h4>
  </div>


  <div class="col-lg-12">
    <div class="col-lg-6 camera-image">
      <img src="<%= @camera['jpg'] %>" width="100%">
    </div>
    <div class="col-lg-5 data">
      <h4>Data</h4>
      <table class="table">
      <tr>
        <td>Vendor:</td>
        <td><%= @camera["vendor_name"] %></td>
      </tr>
      <tr>
        <td>Model:</td>
        <td><%= @camera['model'] %></td>
      </tr>
      <tr>
        <td>Status:</td>
        <td>
          <% if @camera['is_online'] %>
            <span class="green">Online</span>
          <% else %>
            <span class="red">Offline</span>
          <% end %>
        </td>
      </tr>
      <tr>
        <td>Added date:</td>
        <td><%= Time.at(@camera['created_at']).to_formatted_s(:long_ordinal) %></td>
      </tr>
      </table>
    </div>
  </div>


</div><!-- .container -->
</div><!-- #PUBLICCAMS -->

