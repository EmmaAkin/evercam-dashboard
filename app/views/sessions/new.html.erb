<% provide(:title, "Sign in") %>

<div class="container section">

 <div id="sign-in" class="col-md-4 col-md-offset-4">

   <div class="col-sm-10 col-md-offset-1 row">
            <h3 class="text-center">Sign in</h3>

            <%= form_for(:session, url: sessions_path) do |f| %>

            <div class="row text-center">
               <div class="col-md-3">
                <%= f.label :email %><!-- Would like to add Email/Username -->
               </div>
               <div class="col-md-4">
                <%= f.text_field :email %>
               </div>
            </div>

            <div class="row text-center">
              <div class="col-md-3">
                <%= f.label :password %>
              </div>
              <div class="col-md-4">
                <%= f.password_field :password %>
              </div>
            </div>
              <div class="row text-center">
                <%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
             </div>
         <div class="row text-center create">
           I've<a href="#"> forgotten my password</a>
         </div>
                <% end %>

    </div>

</div>
  <div class="col-md-4 col-md-offset-4 row text-center create">
    <p>Or <%= link_to "Create New Account", signup_path %></p>
  </div>
</div>
