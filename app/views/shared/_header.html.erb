<div class="page-header navbar navbar-fixed-top">
  <div class="page-header-inner">

    <div class="page-logo">
      <%= link_to image_tag("evercam-white.png", alt: "Evercam logo"), root_path, class: 'logo-default' %>
      <div class="sidebar-toggler-wrapper">
        <div class="sidebar-toggler"></div>
      </div>
    </div>

    <a href="javascript:;" class="menu-toggler responsive-toggler" data-toggle="collapse" data-target=".navbar-collapse"></a>

    <div class="nav-title pull-left">
      <a href="/cameras/new" data-toggle="tooltip" data-placement="bottom" title="Add a Camera" title="Add Camera"><i class="icon icon-plus"></i></a>
      <a href="/dev" data-toggle="tooltip" data-placement="bottom" title="Developer" title="Developer" class="toggle-sidebar"><i class="icon icon-briefcase"></i></a>
      <% if params[:action] == 'index' %>
        <a data-toggle="tooltip" data-placement="bottom" title="Refresh Cameras" class="refresh-images" title="Refresh Cameras"><i class="icon icon-refresh"></i></a>
      <% end %>
    </div>

    <div class="top-menu">
      <ul class="nav navbar-nav pull-right">
        <li class="dropdown dropdown-user">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
            <div class="avatar"><%= current_user.fullname[0, 1] %></div>
					    <span class="username">
				      	<%= current_user.fullname %>
                <i class="fa fa-angle-down"></i>
              </span>
          </a>

          <ul class="dropdown-menu">
            <li role="presentation">
              <a role="menuitem" tabindex="-1" href="/users/<%= current_user.username %>/settings">User Settings</a>
            </li>
            <li role="presentation"><a href="javascript:Intercom('show');">Support</a></li>
            <li role="presentation"><%= link_to "Sign out", signout_path, method: "delete", class: "" %></li>
          </ul>
        </li>
      </ul>
    </div>
  </div>
</div>
