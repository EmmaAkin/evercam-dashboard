<section>
  <div class="row">
    <div class="col-md-12">
      <h3>Add Ons</h3>
      <p>Current Add-ons:</p>
      <p><%= @snapmails %> Snapmail add-on</p>
      <p><%= @timelapses %> Timelapse add-on</p>
    </div>
  </div>
</section>
<div class="row">
  <!-- Add-ons list -->
  <table class="table table-striped margin-top-20">
    <tr>
      <th>Add-on</th>
      <th>Period</th>
      <th>Expiry</th>
      <th>Status</th>
      <th>Action</th>
    </tr>
    <% @add_ons.each do |add_on| -%>
      <tr>
        <td><%=  add_on.add_ons_name -%></td>
        <td><%= add_on.period -%></td>
        <td><%= add_on.add_ons_end_date.strftime('%d/%m/%Y') %></td>
        <td><%= add_on.status ? 'Active' : 'Expired' %></td>
        <td><%= button_to 'Delete', delete_add_ons_path(add_on.id), method: :delete, class: 'delete-add-ons' %></td>
      </tr>
    <% end -%>
  </table>
</div>