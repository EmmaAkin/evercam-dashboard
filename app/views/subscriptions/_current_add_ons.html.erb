<% if @add_ons.present? %>
<!-- Add-ons list -->
<table class="table margin-top-20">
  <tr>
    <th>Add-on</th>
    <th>Period</th>
    <th>Expiry</th>
    <th>Status</th>
    <th>Action</th>
  </tr>
  <% @add_ons.each do |add_on| -%>
    <tr>
      <td><%=  add_on.add_ons_name -%></td>
      <td><%= add_on.period -%></td>
      <td><%= add_on.add_ons_end_date.strftime('%d/%m/%Y') %></td>
      <td><%= add_on.status ? 'Active' : 'Expired' %></td>
      <td><%= link_to 'Cancel', delete_add_ons_path(add_on.id), method: :delete, class: 'delete-add-ons' %></td>
    </tr>
  <% end -%>
</table>
  <%= link_to 'Get more Add-ons', add_ons_path(current_user.username), class: 'margin-top-20' %>
<% else %>
  <%= link_to 'Browse Add-ons', add_ons_path(current_user.username), class: 'btn btn-primary margin-top-20' %>
<% end %>
