<div class="subscriptions page-content-wrapper">
  <div class="bb-alert alert alert-info" style="display:none;">
    <span></span>
  </div>
  <div class="page-content">
    <%= render 'navigation' %>

    <div id="content">
      <div class="col-md-12">
        <h3>Choose your plan</h3>
        <div class="card">
        <ul id="tabs" class="nav-plans nav nav-tabs" data-tabs="tabs">
          <li class="active"><a href="#annual" data-toggle="tab">Annual <span class="small green"> (Save 20%)</span></a></li>
          <li><a href="#monthly" data-toggle="tab">Monthly</a></li>
        </ul>
        <%= render "plans_comparison" %>
        </div>
        <div class="add-ons margin-top-30">
          <h3>Get Add-ons</h3>
          <div class="card">
            <%= render "add_ons_select" %>
          </div>
        </div>

        <h3>Review your Order</h3>
        <div class="card">
          <div class="row">
            <div class="col-md-6">
              <%= render "cart" %>
            </div>
            <% unless has_credit_cards? %>
              <div class="pull-right note note-info">
                <p>You will need to add a credit card before proceeding to the checkout.</p>
                <%= render 'add_card' %>
              </div>
            <% end %>
          </div>

          <div class="row">
            <div class="col-md-6 margin-bottom-30">
              <%= link_to "Proceed to Checkout", new_checkout_path, class: 'col-md-6 pull-right btn btn-primary' %>
            </div>

          </div>




      </div>
    </div>


  </div>
</div>
<script>
  window.initializeChangePlan()
  Notification.init(".bb-alert");
  <% if flash[:message] %>
  Notification.show('<%= flash[:message] %>');
  <% end %>
</script>
