<div class="subscriptions page-content-wrapper">
  <div class="page-content">
    <%= render partial: "users/section_header", locals: { section_header_title: "Current Subscription" } %>
    <div class="portlet-body">
      <div class="add-ons">
      <%= render 'navigation' %>
        <div class="row">
          <div class="col-md-12">
          <%= render 'current_subscription' %>
          <%= render "current_add_ons" %>
          </div>
          <div class="col-md-4 col-md-offset-8">
            <h3>Cart</h3>
            <%= render "cart" %>
            <%= link_to "Checkout", new_checkout_path %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
  Notification.init(".bb-alert");
  <% if flash[:message] %>
  Notification.show('<%= flash[:message] %>');
  <% end %>
</script>