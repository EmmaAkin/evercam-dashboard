<div class="row">
  <div class="col-md-12">
    <div>
      <table style="width:100%;" class="table table-full-width">
        <tr>
          <th class="col-md-8">Camera</th>
          <th class="col-md-4">Product</th>
        </tr>
        <% @cameras_products.each do |camera| %>
          <tr>
            <td><%= camera[:name] %></td>
            <% if camera.cloud_recording.present? %>
              <% if camera.cloud_recording[0].storage_duration.equal?(-1) %>
                <td>Infinity</td>
              <% elsif  camera.cloud_recording[0].storage_duration.equal?(1) %>
                <td>24 hours recording</td>
              <% else %>
                <td><%= camera.cloud_recording[0].storage_duration %> days recording</td>
              <% end %>
            <% else %>
              <td></td>
            <% end %>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>