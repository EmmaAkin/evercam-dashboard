<div class="col-md-12">
  <h3>Licences Required</h3>
  <div class="card">
    <%= render 'subscriptions/licences/cameras' %>
  </div>
</div>

<div class="col-md-12">
  <h3>Licences Purchased</h3>

  <% monthly_total = @seven_days_recording + @thirty_days_recording + @ninety_days_recording %>
  <% annual_total = @seven_days_recording_annual + @thirty_days_recording_annual + @ninety_days_recording_annual %>
  <form id="form-make-payment" method="post" action="<%= new_charge_path %>">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
    <div class="portlet-body">
      <div class="tabbable tabbable-custom">
        <div class="center-tabs">
          <ul id="ul-nav-tab" class="nav-plans nav nav-tabs">
            <li class="active">
              <a data-toggle="tab" data-target="#monthly-plans" class="nav-tab-licences nav-tab-">Monthly Plans (<%= monthly_total %>)</a>
            </li>
            <li>
              <a data-toggle="tab" data-target="#annual-plans" class="nav-tab-history">Annual Plans (<%= annual_total %>)</a>
            </li>
          </ul>
        </div>
        <div class="tab-content">
          <div id="monthly-plans" class="tab-pane active">
            <%= render partial: "subscriptions/licences/monthly_plan" %>
          </div>
          <div id="annual-plans" class="tab-pane">
            <%= render partial: "subscriptions/licences/annual_plan" %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <div class="row">
            <div class="col-md-8 margin-top-15">
            <% unless !@next_charge %>
                <div class="col-md-8"><strong>Next Renewal:</strong></div>
                <div class="col-md-4 text-right">
                  <strong><%= Time.at(@next_charge[:date]).strftime("%d %B") %><% cents_to_currency @next_charge[:total] %></strong>
                </div>
            <% end %>
            </div>
            <div class="col-md-4 text-right">
              <input type="button" class="btn btn-primary red" value="Add/Remove Licence" />
            </div>
          </div>
        </div>
      </div>
    </div>
  </form>
</div>

<div id="divCart" style="<% if session[:cart].blank? %>display: none;<% end %>" class="col-md-12">
  <h3>Cart</h3>
  <div class="card">
    <%= render 'cart' %>
    <a class="col-md-4 pull-right btn btn-primary add-card-to-continue" data-toggle="modal" data-target="#payNowModal">Pay Now</a>
    <% link_to "Proceed to Checkout", new_checkout_path, class: '' %>
  </div>
</div>

<div id="payNowModal" class="modal fade">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-body">
        <div class="col-md-12">
          <p class="text-left margin-top-10 change-plan-desc" id="add-card-message">Add a credit card before save your plan(s).</p>
          <p id="checkout-message" class="text-left margin-top-10">
            <strong><span id="spnTotalPrice"></span></strong>Your subscriptions will be saved and charged from your <strong><%= @card.brand if @card.present? %></strong> card ending in <strong><%= @card.last4 if @card.present? %></strong></p>
        </div>
      </div>
      <div class="modal-footer">
        <div class="col-sm-8">
          <input type="hidden" id="has-credit-card" value="<%= has_credit_cards? %>">
          <input id="saveSubscriptions" type="button" class="btn btn-primary pull-left" value="Save Plans" />&nbsp;
          <input type="button" class="btn btn-default pull-left margin-left2" value="Cancel" data-dismiss="modal" />
        </div>
      </div>
    </div>
  </div>
</div>