<div class="col-md-12">
  <h3>Cameras</h3>
  <div class="card">
    <%= render 'subscriptions/licences/cameras' %>
  </div>
</div>

<div class="col-md-12">
  <h3>Plans</h3>
  <div class="card">
    <%= render 'current_add_ons' %>
    <% unless !@next_charge %>
      <p class="margin-top-20">Your next charge of
        <strong><%= cents_to_currency @next_charge[:total] %></strong>
        is on <%= Time.at(@next_charge[:date]).strftime("%d %b %Y") %>.</p>
    <% end %>
  </div>
</div>