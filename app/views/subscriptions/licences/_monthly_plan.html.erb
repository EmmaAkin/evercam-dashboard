<div class="col-md-12">
  <% qty = @subscriptions[:data][0][:quantity] if @subscriptions.present? %>
  <table class="col-md-6 plan-table">
    <tr class="plan-monthly">
      <td class="col-md-5">7 Day Licences</td>
      <td class="col-md-1 text-center">
        <% if @subscription && @subscription[:id].eql?('7-days-recording') && qty.present? %>
          <%=qty %>
        <% else %>
          <input id="7-days-recording-qty" type="text" value="0" class="quantity-text small no-editable" readonly>
        <% end %>
      </td>
    </tr>
    <tr class="plan-monthly">
      <td>30 Day Licences</td>
      <td class="text-center">
        <% if @subscription && @subscription[:id].eql?('30-days-recording') && qty.present? %>
          <%=qty %>
        <% else %>
          <input id="30-days-recording-qty" type="text" value="0" class="quantity-text small no-editable" readonly>
        <% end %>
      </td>
    </tr>
    <tr class="plan-monthly">
      <td>90 Day Licences</td>
      <td class="text-center">
        <%# if @subscription && @subscription[:id].eql?('90-days-recording') && qty.present? %>
        <input id="90-days-recording-qty" type="text" value="2" class="quantity-text small no-editable" readonly>
      </td>
    </tr>
  </table>
</div>