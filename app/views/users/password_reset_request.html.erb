<% provide(:title, "Evercam: Password Reset") %>

<div class="bb-alert alert alert-info" style="display:none;">
  <span></span>
</div>
<div class="container" id="pass-reset">
  <div class="branding">
    <%= link_to image_tag("evercam_logo.svg", class: "svg-logo", alt: "Evercam.io"), root_path %>
  </div>
  <div class="row">
    <div class="col-lg-4 col-lg-offset-4 col-md-6 col-md-offset-3 col-xs-10 col-xs-offset-1 panel">
      <div class="col-md-12" id="user-settings"><h4>Forgotten Password</h4></div>
      <div class="col-md-11 col-xs-12 reset-password">
        <form role="form" method="post" class="center-block">
          <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>

          <div class="form-group">
            <div class="input-icon right">
              <i class="icon">@</i>
              <input type="email" value="" class="form-control" id="email" name="email" placeholder="Enter your email address">
            </div>
          </div>
          <input type="submit" class="btn btn-primary" value="Reset">
        </form>
      </div>
    </div>
    <div class="col-md-4 col-md-offset-4 row text-center">
      <p><%= link_to "I've remembered my password", signin_path %></p>
    </div>
  </div>
</div>

<script>
  Notification.init(".bb-alert");
  <% if flash[:message] %>
  Notification.show('<%= flash[:message] %>');
  <% end %>
</script>
