<% provide(:title, "Evercam: Password Update") %>

<div class="bb-alert alert alert-info" style="display:none;">
  <span></span>
</div>
<div class="container" id="pass-reset">
  <div class="branding">
    <%= link_to image_tag("evercam_logo.png", class: "svg-logo", alt: "Evercam.io"), root_path %>
  </div>

  <div class="row">
      <div class="col-lg-4 col-lg-offset-4 col-md-6 col-md-offset-3 col-xs-10 col-xs-offset-1 panel">

        <% if @expired %>
        <div class="col-md-12" id="user-settings"><h4>Link Expired</h4></div>
        <div class="col-md-11 col-xs-12 reset-password">
          <p>It looks like this password reset link has expired and can no longer be used.</p>
          <p>To get a new password link go to:
            <%= link_to password_reset_url, password_reset_path %>
          </p>
        </div>
        <% else %>

        <div class="col-md-12" id="user-settings"><h4>Enter a new Password</h4></div>
        <div class="col-md-11 col-xs-12 reset-password">
          <form role="form" method="post" class="center-block">
            <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>

            <div class="form-group">
              <div class="input-icon right">
                <i class="icon-lock"></i>
                <input type="password" value="" class="form-control" id="password" name="password" placeholder="Enter Password">
              </div>
            </div>
            <input type="hidden" name="username" value="<%= params[:u] %>">
            <input type="hidden" name="token" value="<%= params[:t] %>">
            <input type="submit" class="btn btn-primary" value="Enter">
          </form>
        </div>
      <% end %>

    </div>
  </div>
</div>

<script>
  Notification.init(".bb-alert");
  <% if flash[:message] %>
  Notification.show('<%= flash[:message] %>');
  <% end %>
</script>
