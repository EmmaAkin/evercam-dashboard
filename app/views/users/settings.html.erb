<% provide(:title, "Evercam: User Settings") %>
<div id="user-settings">
  <div class="page-content-wrapper" id="manage-account">
    <div class="page-content" id="camera-single">
      <div class="row">
        <div class="section-header">
          <div class="camera-title">
            <div class="col-xs-12 col-md-12">
              Account
            </div>
          </div>
        </div>
      </div>
      <div class="portlet-body">

        <div class="account tabbable tabbable-custom">
          <div class="center-tabs">
            <ul class="nav nav-tabs">
              <li class="active">
                <a id="nav-tabs-2" data-toggle="tab" href="#account"><i class="icon icon-user"></i>Account</a>
              </li>
              <li>
                <a data-toggle="tab" href="#password"><i class="icon icon-key"></i>Password</a>
              </li>
              <li>
                <a data-toggle="tab" href="#applications"><i class="icon icon-settings"></i>Applications</a>
              </li>
              <li>
                <a data-toggle="tab" href="#billing"><i class="icon icon-credit-card"></i>Billing</a>
              </li>

            </ul>
          </div>

          <div class="tab-content">
            <div id="account" class="tab-pane active">
              <%= render partial: "users/settings/account_tab" %>
            </div>
            <div id="password" class="tab-pane">
              <%= render partial: "users/settings/password_tab" %>
            </div>
            <div id="applications" class="tab-pane">
              <%= render partial: "users/settings/applications_tab" %>
            </div>
            <div id="billing" class="tab-pane">
              <%= render partial: "users/settings/billing_tab" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<%= javascript_include_tag "user_account" %>
<script>
  $(document).ready(function () {
    window.initializeUserAccount();
    <% if flash[:message] %>
    Notification.show('<%= flash[:message] %>');
    <% end %>
  });
</script>
