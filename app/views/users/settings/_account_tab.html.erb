<div id="user-settings">
  <div class="user-settings-portal col-md-8">
    <div class="">
      <div class="portlet-body form">
        <form id="userProfile" role="form" method="post">
          <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
          <div class="form-group">
            <label class="grey" for="user-username">Username <span id="username"> cannot be changed.</span></label>
            <div id="username-show">
              <input type="text" value="<%= current_user.username -%>" class="form-control input-medium input-inline" id="user-username" name="user-username" readonly="readonly" disabled placeholder="">
            </div>
          </div>
          <div class="form-group">
            <label class="grey" for="email">Email</label>
            <input data-validation="email" type="text" readonly="readonly" value="<%= current_user.email -%>" class="form-control input-medium" id="email" name="email" placeholder="Enter email">
          </div>
          <div class="row">
            <div class="col-md-3">
              <div class="form-group">
                <label class="grey" for="user-firstname">First Name</label>
                <input data-validation-error-msg="Cannot be blank" readonly="readonly" data-validation="length" data-validation-length="min1" type="text" value="<%= current_user.firstname -%>" class="form-control input-medium input-short" id="user-firstname" name="user-firstname" placeholder="Enter firstname">
              </div>
            </div>
            <div class="col-md-3">
              <div class="form-group">
                <label class="grey" for="user-lastname">Last Name</label>
                <input data-validation-error-msg="Cannot be blank" readonly="readonly" data-validation="length" data-validation-length="min1" type="text" value="<%= current_user.lastname -%>" class="form-control input-medium input-short" id="user-lastname" name="user-lastname" placeholder="Enter lastname">
              </div>
            </div>
          </div>
          <div class="form-group">
            <label class="grey" for="country">Country</label>
            <select id="country" disabled="disabled" name="country" class="input-medium form-control is-required">
              <% @countries.each do |c| %>
                <option value="<%= c.iso3166_a2 -%>" <%= 'selected="selected"' if c == current_user.country %>>
                  <%= c.name -%>
                </option>
              <% end %>
            </select>
          </div>
          <div id="show" class="btn btn-edit hide-btn makeEditable">Edit</div>
          <div class="margin-top-20">
            <div class="row">
              <div class="col-md-12">
                <p class="hide-p" style="display: none;">
                  <input type="submit" id="hide" class="btn blue" value="Update" name="Save"/>
                  <input type="reset" id="hide-2" class="makeNonEditable btn btn-default cancel" value="Cancel" name="Reset"/>
                </p>
              </div>
            </div>
            <div class="col-md-3"></div>
          </div>
        </form>
        <% unless current_user.confirmed_at %>
          <div class="alert alert-info alert-dismissible fade in margin-top-20" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
              <span aria-hidden="true">&times;</span></button>
                <span>
                  It looks like your account has not been verified yet.
                  <%= link_to 'Resend verification email.', user_email_resend_path(current_user.username), class: 'resend-email' %>
                </span>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
