            <h5>Evercam Bundle Silver</h5>
            <div class="row">
              <div class="col-md-6">
                <p class="margin-top-10 margin-bottom-10">Annual - €199.00</p>
                <%= form_tag charges_path do %>
                  <input type="hidden" name="amount" value="19500"/>
                  <input type="hidden" name="token" value="<%= current_user.billing_id %>"/>
                  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
                          data-description="Evercam Bundle Silver (Annual)"
                          data-amount="19900"
                          data-currency="eur"></script>
                <% end %>
              </div>
