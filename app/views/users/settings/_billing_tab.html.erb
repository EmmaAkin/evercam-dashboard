<div class="row" id="billing">
  <div class="col-md-12">
    <ul class="list-group list-group-lg">
      <li class="list-group-item">
        <div class="panel-section">
          <div class="panel-description col-md-4">
            <h3>Billing Information</h3>
            <% if @customer.nil? %>
            <p>This account does not have a credit card.</p>
            <% else %>
              <div class="row">
                <div class="col-md-12">
                  <p>This account is billed to: <strong><%= @customer['cards']['data'].first['brand'] %>-<%= @customer['cards']['data'].first['last4'] %></strong></p>
                </div>
                <div class="col-md-12">
                  <p>Expires: <strong><%= @customer['cards']['data'].first['exp_month'] %>-<%= @customer['cards']['data'].first['exp_year'] %></strong></p>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </li>
      <li class="list-group-item">
        <div class="panel-section">
          <div class="panel-description col-md-4">
            <h3>Current Subscriptions</h3>
              <div class="row">
                <div class="col-md-12">
                  Number of subscriptions: <strong><%= @customer['subscriptions']['total_count'] %></strong>
                </div>
              </div>
          </div>
        </div>
      </li>
      <li class="list-group-item">
        <div class="panel-section">
          <div class="panel-description col-md-4">
            <h3>Purchase New Subscriptions</h3>





            <h5>Evercam Bundle Silver</h5>

            <div class="row">
              <div class="col-md-6">
                <%= @silver_annual_plan.name %>
                <%= @silver_annual_plan.amount %>

                <%= form_tag charges_path do %>
                  <input type="hidden" name="amount" value="19500"/>
                  <input type="hidden" name="token" value="<%= current_user.billing_id %>"/>
                  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
                          data-description="Evercam Bundle Silver (Annual)"
                          data-amount="19900"
                          data-currency="eur"></script>
                <% end %>
              </div>
              <div class="col-md-6">
                <%= @silver_monthly_plan.name %>
                <%= @silver_monthly_plan.amount %>
                <%= form_tag charges_path do %>
                  <input type="hidden" name="amount" value="2500"/>
                  <input type="hidden" name="token" value="<%= current_user.billing_id %>"/>
                  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
                          data-description="Evercam Bundle Silver (Monthly)"
                          data-amount="2500"
                          data-currency="eur"></script>
                <% end %>
              </div>
            </div>
          </div>
          <div class="panel-content col-md-8">
          </div>
        </div>
      </li>
      <li class="list-group-item">
        <div class="panel-section">
          <div class="panel-description col-md-4">
            <h5>Snapmail</h5>

            <div class="row">
              <div class="col-md-6">
                <p class="margin-top-10 margin-bottom-10">Annual - €99.00</p>
                <%= form_tag charges_path do %>
                  <input type="hidden" name="amount" value="9900"/>
                  <input type="hidden" name="token" value="<%= current_user.billing_id %>"/>
                  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
                          data-description="Evercam Bundle Silver (Monthly)"
                          data-amount="9900"
                          data-currency="eur"></script>
                <% end %>
              </div>
              <div class="col-md-6">
                <p class="margin-top-10 margin-bottom-10">Montly - €10.00</p>
                <%= form_tag charges_path do %>
                  <input type="hidden" name="amount" value="1000"/>
                  <input type="hidden" name="token" value="<%= current_user.billing_id %>"/>
                  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
                          data-description="Snapmail (Monthly)"
                          data-amount="1000"
                          data-currency="eur"></script>
                <% end %>
              </div>
            </div>
          </div>
          <div class="panel-content col-md-8">

          </div>
        </div>
      </li>
      <li class="list-group-item">
        <div class="panel-section">
          <div class="panel-description col-md-4">
            <h5>Timelapse</h5>

            <div class="row">
              <div class="col-md-6">
                <p class="margin-top-10 margin-bottom-10">Annual - €99.00</p>
                <%= form_tag charges_path do %>
                  <input type="hidden" name="amount" value="9900"/>
                  <input type="hidden" name="token" value="<%= current_user.billing_id %>"/>
                  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
                          data-description="Evercam Bundle Silver (Monthly)"
                          data-amount="9900"
                          data-currency="eur"></script>
                <% end %>
              </div>
              <div class="col-md-6">
                <p class="margin-top-10 margin-bottom-10">Montly - €10.00</p>
                <%= form_tag charges_path do %>
                  <input type="hidden" name="amount" value="1000"/>
                  <input type="hidden" name="token" value="<%= current_user.billing_id %>"/>
                  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
                          data-description="Snapmail (Monthly)"
                          data-amount="1000"
                          data-currency="eur"></script>
                <% end %>
              </div>
            </div>
          </div>
          <div class="panel-content col-md-8">
          </div>
        </div>
      </li>


    </ul>
  </div>
</div>
